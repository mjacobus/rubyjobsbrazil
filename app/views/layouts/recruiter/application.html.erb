<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%= yield :after_head_opens %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="ROBOTS" content="NOODP" />
    <title><%= title %></title>
    <%= render 'recruiter/meta_og' %>
    <%= stylesheet_link_tag 'recruiter/application', :media => 'all' %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
    <%= render 'recruiter/analytics' %>
    <style type="text/css"><%= Pygments.css %> </style>
    <%= yield :before_head_closes %>
  </head>
  <body>
    <%= yield :after_body_opens %>
    <%= render 'recruiter/top_menu' -%>
    <%= render 'recruiter/flashes' -%>
    <div id="middle">
      <div id="main_content" class="row">
        <div class="small-12 columns">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render 'recruiter/footer' %>
    <%= render 'recruiter/javascript' %>
    <%= yield :before_body_closes %>
  </body>
</html>
